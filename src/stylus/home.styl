/* ==========================================================================
   Hero Unit
   ========================================================================== */

.hero {
  position: relative;

  padding: 1.5em 0;

  background: $white;
  text-align: center;
}

.tagline {
  margin: 0;

  font-size: 1.3125em
  font-weight: 400;

  a {
    font-weight: 700;
  }

  br {
    display: none;
  }
}

.video {
  position: absolute;
  top: 0;
  height: 480px;
  width: 100%;
  visibility: hidden;

  background-color: #777;

  iframe {
    display: none;
    margin: 0 auto;
  }
}

.close-btn {
  bottom: 10px;
  right: -20px;
  padding: 0;
  position: absolute;

  border: none;

  background: none;

  color: #fff;
  font-size: 0.75em;
  font-weight: 700;
  letter-spacing: 1px;
  text-rendering: optimizeLegibility;
  text-transform: uppercase;
  -webkit-font-smoothing: antialiased;

  &:hover {
    text-decoration: underline;
  }
}

.hero.no-video {
  transition: height 0.3s ease-out;

  .video {
    visibility: hidden;

    opacity: 0;

    transition: visibility 0s 0.5s, opacity 0.6s ease;
  }
}

.hero.has-video {
  height: 480px !important;

  transition: height 0.3s ease-out;

  .hero-content {
    display: none;
  }

  .video {
    visibility: visible;
    opacity: 1;

    transition: opacity 0.6s ease;

    iframe {
      display: block;
    }
  }
}

/* ==========================================================================
   Used By List
   ========================================================================== */

.used-by {
  padding: 1em 0;
  border: 1px solid $blue-border;
  border-width: 1px 0;
  
  background: $blue-tint;
  text-align: center;
}

.used-by-caption {
  margin-top: 0;

  font-size: 1em;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.used-by-list {
  margin: 0;
  padding: 0;

  list-style: none;

  li {
    margin: 1.5em 0;
  }

  a {
    position: relative;

    display: block;
    margin: 0 auto;

    background-position: bottom left;
    background-size: 100%;

    &:hover {
      background-position: top left;
    }
  }
}

.used-by-walmart {
  width: 152px;
  height: 37px;
  top: 2px;

  background-image: url('../img/walmart-small.png');
}

.used-by-asda {
  width: 115px;
  height: 34px;

  background-image: url('../img/asda-small.png');
}

.used-by-metalab {
  width: 152px;
  height: 38px;
  top: 2px;

  background-image: url('../img/metalab.png');
}

/* ==========================================================================
   Primary Content
   ========================================================================== */

.home-primary {
  h1,
  h2 {
    margin: 0.75em 0;
    border-bottom: 5px solid $blue-border;
  }
}

.features-content {
  h2 {
    margin-top: 0;
    border: 0;

    font-size: 16px;
    letter-spacing: 1px;
    text-transform: uppercase;
  }
}

.examples {
  margin-top: 0;
  padding: 0;

  font-size: 14px;
  font-weight: bold;
  list-style: none;

  li {
    margin: 0.5em 0;

    &:first-child {
      margin-top: 0;
    }
  }
}

.resources {
  display: block;
  padding: 0;
  margin: 0;

  list-style: none;

  li {
    display: block;
    margin-bottom: 10px;
  }
}

.quick-start {
  ul {
    padding: 0;

    list-style: none;
  }

  li {
    margin: 1em 0;

    font-size: 0.85em;
  }
}

/* ==========================================================================
   Screens 35em (560px) and Larger
   ========================================================================== */

@media only screen and (min-width: 35em) {
  .tagline {
    br {
      display: inline;
    }
  }

  .resources {
    li {
      display: inline-block;
      margin-left: 1.5em;

      &:first-child {
        margin-left: 0;
      }
    }
  }

  .used-by {
    padding: 1.5em 0;
    border-bottom: 1px solid $blue-border;

    background: $blue-tint;
    text-align: center;
  }

  .used-by-caption {
    margin-top: 0;

    font-size: 1em;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .used-by-list {
    padding: 0.5em 0;
    list-style: none;
    margin: 0;

    li {
      display: inline-block;
      margin: 0 0 0 2em;

      &:first-child {
        margin-left: 0;
      }
    }

    a {
      display: block;
      position: relative;
      background-position: bottom left;
      background-size: 100%;

      &:hover {
        background-position: top left;
      }
    }
  }
}

/* ==========================================================================
   Screens 50em (800px) and Larger
   ========================================================================== */

@media only screen and (min-width: 50em) {
  .hero-content {
    padding: 3em 0 2em;
  }

  .tagline {
    font-size: 2em;
  }

  .resources {
    display: inline-block;
    margin-left: 3.33%;

    li {
      display: inline-block;

      margin-left: 1.5em;
    }
  }
}