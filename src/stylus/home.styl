/* ==========================================================================
   Hero Unit
   ========================================================================== */

.hero {
  position: relative;

  background: $white;
  text-align: center;
}

.hero-content {
  position: relative;

  padding: 1.5em 0;

  transition: opacity 0.3s ease;
}

.tagline {
  margin: 0;

  font-size: 1.3125em
  font-weight: 400;

  a {
    font-weight: 700;
  }

  br {
    display: none;
  }
}

.resources {
  display: block;
  padding: 0;
  margin: 0;

  list-style: none;

  li {
    display: block;
    margin-bottom: 10px;
  }
}

.video-container {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;

  width: 100%;
  height: 100%;

  background: #777;
  opacity: 0;
  transition: 0.3s ease opacity;
  visibility: hidden;
}

.video {
  position: relative;

  max-width: 850px;
  margin: 0 auto;
}

.iframe-container {
  position: relative;

  height: 0;
  padding-bottom: 56.25%;

  iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
}

.hero.animating {
  transition: 0.3s ease height;
}

.hero.has-video {
  .hero-content {
    position: absolute;
    opacity: 0;
    visibility: hidden;
  }

  .video-container {
    position: relative;
    z-index: 1;
    opacity: 1;
    visibility: visible;
  }
}

.close-btn {
  position: absolute;
  top: 5px;
  right: 5px;
  z-index: 200;

  width: 40px;
  height: 40px;
  padding: 0;
  border: none;
  border-radius: 50%;

  background: #333;
  background: rgba(0,0,0,0.75);
  color: #fff;
  font-size: 0.75em;
  font-weight: 700;
  letter-spacing: 1px;
  text-rendering: optimizeLegibility;
  text-transform: uppercase;
  -webkit-font-smoothing: antialiased;

  color: #fff;
  cursor: pointer;
  font-size: 48px;
  font-weight: 700;
  line-height: 42px;
  text-align: center;

  &:before {
    content: '\00d7';
    display: block;
  } 
}

/* ==========================================================================
   Used By List
   ========================================================================== */

.used-by {
  position: relative;
  z-index: 2;
  padding: 1em 0;
  border: 1px solid $blue-border;
  border-width: 1px 0;
  
  background: $blue-tint;
  text-align: center;
}

.used-by-caption {
  margin-top: 0;

  font-size: 1em;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.used-by-list {
  margin: 0;
  padding: 0;

  list-style: none;

  li {
    margin: 1.5em 0;
  }

  a {
    position: relative;

    display: block;
    margin: 0 auto;

    background-position: bottom left;
    background-size: 100%;

    &:hover {
      background-position: top left;
    }
  }
}

.used-by-walmart {
  width: 152px;
  height: 37px;
  top: 2px;

  background-image: url('../img/walmart-small.png');
}

.used-by-asda {
  width: 115px;
  height: 34px;

  background-image: url('../img/asda-small.png');
}

.used-by-metalab {
  width: 152px;
  height: 38px;
  top: 2px;

  background-image: url('../img/metalab.png');
}

/* ==========================================================================
   Primary Content
   ========================================================================== */

.home-primary {
  h1,
  h2 {
    margin: 0.75em 0;
    border-bottom: 5px solid $blue-border;

    font-weight: 700;
  }
}

/* ==========================================================================
   Features Widget
   ========================================================================== */

.features {
  @extend $kilo-col3-4;
}

.features-content {
  @extend $nano-col2-3;

  h2 {
    margin-top: 0;
    border: 0;

    font-size: 16px;
    letter-spacing: 1px;
    text-transform: uppercase;
  }
}

.features-nav {
  @extend $nano-col1-3;

  overflow: hidden;
  position: absolute;
  top: 73px;
  right: 0;
  left: 0;

  max-height: 0;
  margin-top: 0;
  padding-left: 0;

  background: $blue-tint;
  font-size: 14px;
  font-weight: bold;
  list-style: none;
  transition: max-height ease 0.3s;

  a {
    display: block;
    padding: 0.5em 1em;
  }

  &.expanded {
    max-height: 297px;
  }
}

.features-nav-toggle {
  position: absolute;
  top: 34px;
  right: 0;
}

/* ==========================================================================
   Quick Start Section
   ========================================================================== */

.quick-start {
  @extend $kilo-col1-4;

  ul {
    padding: 0;

    list-style: none;
  }

  li {
    margin: 1em 0;

    font-size: 0.85em;
  }
}

/* ==========================================================================
   Screens 35em (560px) and Larger
   ========================================================================== */

@media only screen and (min-width: 35em) {
  .tagline {
    br {
      display: inline;
    }
  }

  .resources {
    li {
      display: inline-block;
      margin-left: 1.5em;

      &:first-child {
        margin-left: 0;
      }
    }
  }

  .used-by {
    padding: 1.5em 0;
  }

  .used-by-list {
    padding: 0.5em 0;

    li {
      display: inline-block;
      margin: 0 0 0 2em;

      &:first-child {
        margin-left: 0;
      }
    }
  }

  .features-nav {
    overflow: visible;
    position: static;

    max-height: none;
    padding-left: $gutter;

    background: transparent;

    li {
      margin: 0.5em 0;

      &:first-child {
        margin-top: 0;
      }
    }

    a {
      display: inline;
      padding: 0;
    }
  }

  .features-nav-toggle {
    display: none;
  }
}

/* ==========================================================================
   Screens 55em (880px) and Larger (Kilo)
   ========================================================================== */

@media only screen and (min-width: 55em) {
  .hero-content {
    padding: 3em 0 2em;
  }

  .tagline {
    font-size: 2em;
  }

  .resources {
    display: inline-block;
    margin-left: 3.33%;
  }
}