/* ==========================================================================
   Hero Unit
   ========================================================================== */

.hero {
  position: relative;

  background: $white;
  text-align: center;
}

.hero-content {
  padding: 1.5em 0;
}

.tagline {
  margin: 0;

  font-size: 1.3125em
  font-weight: 400;

  a {
    font-weight: 700;
  }

  br {
    display: none;
  }
}

.resources {
  display: block;
  padding: 0;
  margin: 0;

  list-style: none;

  li {
    display: block;
    margin-bottom: 10px;
  }
}

.video {
  position: absolute;
  top: 0;
  height: 480px;
  width: 100%;
  visibility: hidden;

  background-color: #777;

  iframe {
    display: none;
    margin: 0 auto;
  }
}

.close-btn {
  bottom: 10px;
  right: 0;
  padding: 0;
  position: absolute;

  border: none;

  background: none;

  color: #fff;
  font-size: 0.75em;
  font-weight: 700;
  letter-spacing: 1px;
  text-rendering: optimizeLegibility;
  text-transform: uppercase;
  -webkit-font-smoothing: antialiased;

  &:hover {
    text-decoration: underline;
  }
}

.hero.no-video {
  transition: height 0.3s ease-out;

  .video {
    visibility: hidden;

    opacity: 0;

    transition: visibility 0s 0.5s, opacity 0.6s ease;
  }
}

.hero.has-video {
  height: 480px !important;

  transition: height 0.3s ease-out;

  .hero-content {
    display: none;
  }

  .video {
    visibility: visible;
    opacity: 1;

    transition: opacity 0.6s ease;

    iframe {
      display: block;
    }
  }
}

/* ==========================================================================
   Used By List
   ========================================================================== */

.used-by {
  position: relative;
  z-index: 2;
  padding: 1em 0;
  border: 1px solid $blue-border;
  border-width: 1px 0;
  
  background: $blue-tint;
  text-align: center;
}

.used-by-caption {
  margin-top: 0;

  font-size: 1em;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.used-by-list {
  margin: 0;
  padding: 0;

  list-style: none;

  li {
    margin: 1.5em 0;
  }

  a {
    position: relative;

    display: block;
    margin: 0 auto;

    background-position: bottom left;
    background-size: 100%;

    &:hover {
      background-position: top left;
    }
  }
}

.used-by-walmart {
  width: 152px;
  height: 37px;
  top: 2px;

  background-image: url('../img/walmart-small.png');
}

.used-by-asda {
  width: 115px;
  height: 34px;

  background-image: url('../img/asda-small.png');
}

.used-by-metalab {
  width: 152px;
  height: 38px;
  top: 2px;

  background-image: url('../img/metalab.png');
}

/* ==========================================================================
   Primary Content
   ========================================================================== */

.home-primary {
  position: relative;
  z-index: 2;

  background: $white;

  h1,
  h2 {
    margin: 0.75em 0;
    border-bottom: 5px solid $blue-border;
  }
}

/* ==========================================================================
   Features Widget
   ========================================================================== */

.features {
  @extend $kilo-col3-4;
}

.features-content {
  @extend $nano-col2-3;

  h2 {
    margin-top: 0;
    border: 0;

    font-size: 16px;
    letter-spacing: 1px;
    text-transform: uppercase;
  }
}

.features-nav {
  @extend $nano-col1-3;

  overflow: hidden;
  position: absolute;
  top: 73px;
  right: 0;
  left: 0;

  max-height: 0;
  margin-top: 0;
  padding-left: 0;

  background: $blue-tint;
  font-size: 14px;
  font-weight: bold;
  list-style: none;
  transition: max-height ease 0.3s;

  a {
    display: block;
    padding: 0.5em 1em;
  }

  &.expanded {
    max-height: 297px;
  }
}

.features-nav-toggle {
  position: absolute;
  top: 34px;
  right: 0;
}

/* ==========================================================================
   Quick Start Section
   ========================================================================== */

.quick-start {
  @extend $kilo-col1-4;

  ul {
    padding: 0;

    list-style: none;
  }

  li {
    margin: 1em 0;

    font-size: 0.85em;
  }
}

/* ==========================================================================
   Screens 35em (560px) and Larger
   ========================================================================== */

@media only screen and (min-width: 35em) {
  .tagline {
    br {
      display: inline;
    }
  }

  .resources {
    li {
      display: inline-block;
      margin-left: 1.5em;

      &:first-child {
        margin-left: 0;
      }
    }
  }

  .used-by {
    padding: 1.5em 0;
  }

  .used-by-list {
    padding: 0.5em 0;

    li {
      display: inline-block;
      margin: 0 0 0 2em;

      &:first-child {
        margin-left: 0;
      }
    }
  }

  .features-nav {
    overflow: visible;
    position: static;

    max-height: none;
    padding-left: $gutter;

    background: transparent;

    li {
      margin: 0.5em 0;

      &:first-child {
        margin-top: 0;
      }
    }

    a {
      display: inline;
      padding: 0;
    }
  }

  .features-nav-toggle {
    display: none;
  }
}

/* ==========================================================================
   Screens 55em (880px) and Larger (Kilo)
   ========================================================================== */

@media only screen and (min-width: 55em) {
  .hero-content {
    padding: 3em 0 2em;
  }

  .tagline {
    font-size: 2em;
  }

  .resources {
    display: inline-block;
    margin-left: 3.33%;
  }
}