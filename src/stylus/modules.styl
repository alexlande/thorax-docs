/* ==========================================================================
   Buttons
   ========================================================================== */

.btn {
  display: inline-block;
  zoom: 1;
  *display: inline;
  padding: 8px 10px;
  position: relative;

  border: 1px solid rgba(0,0,0,0.1);

  background-color: $yellow;

  color: #222;
  text-shadow: 0 1px 0 rgba(255,255,255,0.3);
  font-size: 13px;
  font-weight: bold;
  text-transform: uppercase;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;

  box-shadow: 
    -1px 1px 0 $blue-border,
    -2px 2px 0 $blue-border, 
    -3px 3px 0 $blue-border,
    -4px 4px 0 $blue-border;

  transition: all 0.1s ease-out;

  &:hover {
    background-color: lighten($yellow, 10%);

    text-decoration: none;
  }

  &:active {
    bottom: -4px;
    left: -4px;
    box-shadow: inset 1px 1px 0 rgba(0,0,0,0.1);
  }
}

.btn-primary {
  background-color: $blue;
  color: #FFF;
  text-shadow: 0 -1px 0 rgba(0,0,0,0.3);

  box-shadow:
    -1px 1px 0 $blue-border,
    -2px 2px 0 $blue-border, 
    -3px 3px 0 $blue-border,
    -4px 4px 0 $blue-border,
    -5px 5px 0 $blue-border;

  &:hover {
    background-color: lighten($blue, 10%);
  }

  &:active {
    bottom: -5px;
    left: -5px;
  }
}

.btn-large {
  padding: 8px 16px;
  margin: 40px 0 24px;

  font-size: 24px;
  text-transform: none;
}

/* ==========================================================================
   Menu Buttons
   ========================================================================== */

.menu-btn {
  width: 40px;
  height: 30px;
  padding: 0;
  border: 0;

  background: transparent;
  color: $blue-light;
  cursor: pointer;
  font-size: 21px;
  line-height: 28px;

  &:hover {
    color: $primary;
  }
}
